<section class="owners">
  <h2>There are <%= @owners.length %> Owners</h2>
  <ul>
    <% @owners.each do |owner| %>
      <li><a href="/owners/<%= owner.id %>"><%= owner.to_s %></a></li>

      <a href="/owners/<%= owner.id %>/edit"><button class="btn btn-warning">Edit</button></a>

      <form method="post" action="/owners/<%= owner.id %>">
        <input type="hidden" name="_method" value="delete">
        <button class="btn btn-danger" type="submit">Delete</button>
      </form>
    <% end %>
  </ul>
  <br>

  <a href="/owners/new"><button class="btn btn-success">Add a new Owner</button></a>
  <br><br>

  <a href="/"><button class="btn btn-primary">Home</button></a>
</section>
