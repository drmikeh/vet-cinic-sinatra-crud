<section class="owner">
  <h2><%= @owner.full_name %></h2>

  <h3>Pets</h3>
  <ul>
    <% @owner.pets.each do |pet| %>
      <li><%= pet.to_s %></li>
    <% end %>
  </ul>

  <a href="/owners/<%= @owner.id %>/edit"><button class="btn btn-warning">Edit</button></a>
  <a href="/owners"><button class="btn btn-primary">Back to Owners</button></a>
</section>
